{
  "name": "@jlongyam/ansi",
  "version": "1.2.0",
  "description": "ANSI utilities",
  "keywords": [
    "ansi",
    "utility"
  ],
  "author": "jlongyam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlongyam/ansi.git"
  },
  "homepage": "https://github.com/jlongyam/ansi",
  "main": "./dist/cjs/index.js",
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@jlongyam/repo": "^2.1.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-buble": "^1.0.3",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@web/dev-server": "^0.4.6",
    "rollup": "^4.57.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "test:icon": "node ./test/icon/icon.test.mjs && node ./test/icon/icon.test.js",
    "test:code": "node ./test/code/code.test.mjs && node ./test/code/code.test.js",
    "test:style": "node ./test/style/style.test.mjs && node ./test/style/style.test.js",
    "test:color": "node ./test/color/color.test.mjs && node ./test/color/color.test.js",
    "test:css": "node ./test/css/css.test.mjs && node ./test/css/css.test.js",
    "test:regex": "node ./test/regex/regex.test.mjs && ./test/regex/regex.test.js",
    "test:ansi": "node ./test/ansi/ansi.test.mjs && node ./test/ansi/ansi.test.js",
    "build": "rollup -c && node ./replace.mjs",
    "server": "web-dev-server",
    "changelog": "repo changelog"
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/ansi.js",
      "import": "./src/index.mjs"
    },
    "./icon": {
      "require": "./dist/cjs/icon.js",
      "import": "./src/icon.mjs"
    },
    "./code": {
      "require": "./dist/cjs/code.js",
      "import": "./src/code.mjs"
    },
    "./style": {
      "require": "./dist/cjs/style.js",
      "import": "./src/style.mjs"
    },
    "./color": {
      "require": "./dist/cjs/color.js",
      "import": "./src/color.mjs"
    },
    "./css": {
      "require": "./dist/cjs/css.js",
      "import": "./src/css.mjs"
    },
    "./regex": {
      "require": "./dist/cjs/regex.js",
      "import": "./src/regex.mjs"
    }
  },
  "files": [
    "dist",
    "test",
    "src",
    "!src/lab",
    "index.html",
    "!test/**/*.mjs"
  ]
}
